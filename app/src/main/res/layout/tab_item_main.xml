<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_tab_main"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:contentDescription="@null"
        android:padding="5dip"
        android:src="@drawable/tab_main_msg" />

    <Button
        android:id="@+id/mBtnTips"
        android:layout_width="10dip"
        android:layout_height="10dip"
        android:layout_alignRight="@id/iv_item"
        android:layout_marginTop="10dip"
        android:background="@drawable/ic_main_msg_tips"
        android:contentDescription="@null"
        android:gravity="center"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/mTvTabTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_item"
        android:layout_centerHorizontal="true"
        android:text="消息"
        android:textSize="10sp" />

</RelativeLayout>